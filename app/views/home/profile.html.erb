<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Profile</title>


<body>
<div class="container">
	<h2>Add your details</h2>
    <form action="updateprofile" method="post">
		  <div class="form-row">
		    <div class="form-group col-md-6">
		      <label for="name">Name</label>
		      <input type="text" class="form-control" id="name" placeholder="Name" name = "name" value=<%=@name%> readonly>
		    </div>

		    <div class="form-group col-md-6">
		      <label for="Email">Email</label>
		      <input type="text" class="form-control" id="email" placeholder="Email address" value=<%=@email%> readonly>
		    </div>
		  </div>


          <% if @collegenamebool %>
		  <div class="form-group col-md-6">
		    <label for="collegename">College Name</label>
		    <input type="text" class="form-control" value = '<%= @collegename %>' readonly>
		  </div>
		  <% else %>
		   <div class="form-group col-md-6">
		    <label for="collegename">College Name</label>
		    <input type="text" class="form-control" name = "collegename" required>
		  </div>
		  <% end %>

          <% if @phonebool %>
		  <div class="form-group col-md-6">
		    <label for="collegename">Phone Number</label>
		    <input type="text" class="form-control" value = '<%= @phone %>' readonly>
		  </div>
		  <% else %>
		   <div class="form-group col-md-6">
		    <label for="collegename">Phone Number</label>
		    <input type="text" class="form-control" name = "phone" required>
		  </div>
		  <% end %>

<!-- 		  <div class="form-group col-md-6">
		    <label for="phone">Phone Number</label>
		    <input type="text" class="form-control" id="inputAddress2"  name = "phone">
		  </div> -->

		    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">


		  <button type="submit" class="btn btn-primary" id="Submit">Submit</button>
    </form>
</div>
</body>
</html>