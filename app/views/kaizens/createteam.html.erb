    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h1 class="mt-5">Register</h1><br>
           <form name ="kaizenForm" action="saveteam" method="post" >
              <div class="form-row">
                <div class="col-md-3"></div>
                <div class="form-group col-md-6">
                  <label for="team_name">Team Name</label>
                  <input type="text" class="form-control" id="team_name" placeholder="Team Name" name =teamname required >
                </div>
              </div>
              <div class="form-row">
                <div class="col-md-3"></div>
                <div class="form-group col-md-6">
                  <label for="team_name_member">Username of Team Member 1</label>
                  <input type="text" class="form-control" id="team_name_member" placeholder="Username" required>
                </div>
              </div>
              <div class="form-row">
                <div class="col-md-3"></div>
                <div class="form-group col-md-6">
                  <label for="contact">Username of Team Member 2(optional) </label>
                  <input type="text" class="form-control" id="contact" placeholder="Username" name=username2>
                </div>
              </div>

                 <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                        
                        <center><input type="submit" class="btn btn-primary m-t-10" id="submitbtn" name="submit" value="Submit"></center>
          </form>
        </div>
